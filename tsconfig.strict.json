{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.js",
    "node_modules",
    "dist",
    "src/tmp"
  ]
}