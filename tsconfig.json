{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": "src/",
    "rootDir": "src/",
    "outDir": "dist/",
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  // "include": [
  //   "src/**/*"
  // ]
}