{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "src/",
    "rootDir": "src/",
    "outDir": "dist/",
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tmp"
  ]
}